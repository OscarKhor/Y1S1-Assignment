            switch (choice) {
            case 1: registerAdmin(); break;
            case 2:
                loginAdmin();
                if (isAdminLoggedIn) {
                    showAdminManagementOptions();
                    return; 
                }
                break;
            case 3: return; 
            }
        } else {
            showAdminManagementOptions();
            return; 
        }
    }
}

